{
  "name": "@ngshad/cli",
  "version": "0.0.5",
  "description": "CLI for installing ngshad components",
  "bin": {
    "ngshad": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node ./dist/index.js",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.{ts,json,md}\""
  },
  "keywords": [
    "angular",
    "ui-library",
    "cli",
    "components",
    "shadcn",
    "tailwindcss"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.5.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kinleyrabgay/ngshad"
  },
  "author": "Kinley Rabgay",
  "license": "MIT",
  "type": "commonjs"
}
